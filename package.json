{
	"name": "vscode-wisl-language-server",
	"displayName": "WISL Language Server",
	"description": "WISL Coloring and Analysis using Separation Logic",
	"author": "Sacha Ayoun <sachaayoun@gmail.com>",
	"license": "MIT",
	"version": "0.0.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/giltho/wisl-language-server.git"
	},
	"publisher": "giltho",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"wisl",
		"separation logic"
	],
	"icon": "assets/logo.png",
	"engines": {
		"vscode": "^1.23.0"
	},
	"activationEvents": [
		"onLanguage:wisl"
	],
	"contributes": {
		"configuration": [
			{
				"title": "WISL",
				"properties": {
					"wisl.binaryPath": {
						"type": "string",
						"default": "wisl",
						"description": "Path to the wisl binary used for analysis"
					},
					"wisl.debugMode": {
						"type": "boolean",
						"default": false,
						"description": "Use WISL in debug mode"
					},
					"wisl.trace.server": {
						"scope": "window",
						"type": "object",
						"description": "Traces the communication between VS Code and the language server.",
						"properties": {
							"verbosity": {
								"type": "string",
								"description": "Controls the verbosity of the trace.",
								"enum": [
									"off",
									"message",
									"verbose"
								],
								"default": "off"
							},
							"format": {
								"type": "string",
								"description": "Controls the output format of the trace.",
								"enum": [
									"text",
									"json"
								],
								"default": "text"
							}
						}
					}
				}
			}
		],
		"languages": [
			{
				"id": "wisl",
				"aliases": [
					"WISL",
					"wisl"
				],
				"extensions": [
					".wisl"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "wisl",
				"scopeName": "source.wisl",
				"path": "./syntaxes/wisl.tmLanguage.json"
			}
		]
	},
	"main": "./client/out/extension",
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile:client": "tsc -p ./client/tsconfig.json",
		"compile:server": "tsc -p ./server/tsconfig.json",
		"watch:client": "tsc -w -p ./client/tsconfig.json",
		"watch:server": "tsc -w -p ./server/tsconfig.json",
		"compile": "npm run compile:client && npm run compile:server",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^8.0.0",
		"typescript": "2.8.3",
		"eslint": "^5.3.0"
	}
}
